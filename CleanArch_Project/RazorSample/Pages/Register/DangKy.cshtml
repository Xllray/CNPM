@page
@model Web.Pages.Register.DangKyModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>DK</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
    <script src="js/jquery-1.11.1.min.js"></script>
    <style>
        body {
            padding-top: 0px;
        }

        .form-control {
            margin-bottom: 10px;
        }

        .login-screen-bg {
            background-color: #EFEFEF;
        }
    </style>
</head>
<body>
    <div class="container">

        <h1 class="text-center">ĐĂNG KÝ</h1>
        <div class="row">

            <div class="col-xs-12 col-sm-12 col-md-4 well well-sm col-md-offset-4">

                <legend>
                    <a href=""><i class="glyphicon glyphicon-globe"></i></a> Đăng ký thành viên!
                </legend>

                <form action="" method="post" class="form" role="form">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-xs-12 col-md-12">
                            <input class="form-control" asp-for="Customer.Name" name="lastname" placeholder="Tên" required="" type="text">
                            <span asp-validation-for="Customer.Name" class="text-danger"></span>
                        </div>
                    </div>
                    <input class="form-control" asp-for="Customer.Email" name="youremail" placeholder="Email" type="email">
                    <span asp-validation-for="Customer.Email" class="text-danger"></span>
                    <input class="form-control" asp-for="Customer.Phone" name="yourphone" placeholder="Điện thoại">
                    <span asp-validation-for="Customer.Phone" class="text-danger"></span>
                    <input class="form-control" asp-for="Customer.Address" name="youraddress" placeholder="Địa chỉ">
                    <span asp-validation-for="Customer.Address" class="text-danger"></span>
                    <input class="form-control" asp-for="User.UserName" name="username" placeholder="Tên tài khoản">
                    <span asp-validation-for="User.UserName" class="text-danger"></span>
                    <input asp-for="User.UserPassword" class="form-control" name="password" placeholder="Mật khẩu" type="password">
                    <span asp-validation-for="User.UserPassword" class="text-danger"></span>
                    <br>
                    <br>
                    <button class="btn btn-lg btn-primary btn-block" type="submit"> Đăng ký</button>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</body>
</html>
